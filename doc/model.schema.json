{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/xausssr/nnreslib/blob/master/doc/model.schema.json",
    "title": "Model",
    "description": "Neural Net model definition",
    "definitions": {
        "Architecture": {
            "properties": {
                "architecture": {
                    "oneOf": [
                        {
                            "$ref": "architecture.schema.json#/definitions/Architecture"
                        },
                        {
                            "$ref": "architecture.schema.json#/definitions/BuiltArchitecture"
                        }
                    ]
                },
                "is_built": {
                    "default": false,
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "required": [
                "architecture"
            ],
            "type": "object"
        },
        "Model": {
            "properties": {
                "batch_size": {
                    "$comment": "#TODO: think about not batch work mode",
                    "minimum": 0,
                    "type": "integer"
                },
                "architecture": {
                    "$ref": "#/definitions/Architecture"
                }
            },
            "additionalProperties": false,
            "required": [
                "architecture"
            ],
            "type": "object"
        }
    },
    "oneOf": [
        {
            "properties": {
                "model": {
                    "$ref": "#/definitions/Model"
                }
            },
            "required": [
                "model"
            ]
        }
    ]
}