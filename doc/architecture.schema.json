{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/xausssr/nnreslib/blob/master/doc/architecture.schema.json",
    "title": "Architecture",
    "description": "Neural Net architecture definition",
    "definitions": {
        "LayerName": {
            "description": "Layer name",
            "pattern": "^[a-zA-Z0-9_]+$",
            "type": "string",
            "minLength": 1
        },
        "LayerType": {
            "description": "Layer type",
            "enum": [
                "InputLayer",
                "ConvolutionLayer",
                "MaxPoolLayer",
                "FlattenLayer",
                "FullyConnectedLayer"
            ],
            "type": "string"
        },
        "SimpleShape": {
            "items": {
                "minimum": 1,
                "type": "integer"
            },
            "minItems": 1,
            "type": "array"
        },
        "FullShape": {
            "properties": {
                "shape": {
                    "items": {
                        "minimum": 0,
                        "type": "integer"
                    },
                    "minItems": 1,
                    "type": "array"
                },
                "is_null": {
                    "const": true,
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "required": [
                "shape"
            ],
            "type": "object"
        },
        "Shape": {
            "anyOf": [
                {
                    "$ref": "#/definitions/SimpleShape"
                },
                {
                    "$ref": "#/definitions/FullShape"
                }
            ]
        },
        "ActivationFunctions": {
            "description": "Activation function",
            "enum": [
                "SIGMOID",
                "RELU",
                "TANH",
                "SOFT_MAX"
            ],
            "type": "string"
        },
        "InputLayer": {
            "description": "Properties specific to InputLayer",
            "properties": {
                "name": {
                    "$ref": "#/definitions/LayerName"
                },
                "type": {
                    "$ref": "#/definitions/LayerType",
                    "const": "InputLayer"
                },
                "input_shape": {
                    "description": "Shape of input data",
                    "$ref": "#/definitions/Shape"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "input_shape"
            ]
        },
        "ConvolutionLayer": {
            "description": "Properties specific to ConvolutionLayer",
            "properties": {
                "name": {
                    "$ref": "#/definitions/LayerName"
                },
                "type": {
                    "$ref": "#/definitions/LayerType",
                    "const": "ConvolutionLayer"
                },
                "kernel": {
                    "description": "Shape of kernel",
                    "$ref": "#/definitions/Shape"
                },
                "stride": {
                    "description": "Shape of stride",
                    "$ref": "#/definitions/Shape"
                },
                "filters": {
                    "description": "Filters count",
                    "type": "integer",
                    "minimum": 1
                },
                "activation": {
                    "$ref": "#/definitions/ActivationFunctions",
                    "default": "RELU"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "kernel",
                "stride",
                "filters"
            ]
        },
        "MaxPoolLayer": {
            "description": "Properties specific to MaxPoolLayer",
            "properties": {
                "name": {
                    "$ref": "#/definitions/LayerName"
                },
                "type": {
                    "$ref": "#/definitions/LayerType",
                    "const": "MaxPoolLayer"
                },
                "kernel": {
                    "description": "Shape of kernel",
                    "$ref": "#/definitions/Shape"
                },
                "stride": {
                    "description": "Shape of stride",
                    "$ref": "#/definitions/Shape"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "kernel",
                "stride"
            ]
        },
        "FlattenLayer": {
            "description": "Properties specific to FlattenLayer",
            "properties": {
                "name": {
                    "$ref": "#/definitions/LayerName"
                },
                "type": {
                    "$ref": "#/definitions/LayerType",
                    "const": "FlattenLayer"
                }
            },
            "additionalProperties": false,
            "required": [
                "type"
            ]
        },
        "FullyConnectedLayer": {
            "description": "Properties specific to FullyConnectedLayer",
            "properties": {
                "name": {
                    "$ref": "#/definitions/LayerName"
                },
                "type": {
                    "$ref": "#/definitions/LayerType",
                    "const": "FullyConnectedLayer"
                },
                "neurons": {
                    "description": "Neurons count",
                    "type": "integer",
                    "minimum": 1
                },
                "activation": {
                    "$ref": "#/definitions/ActivationFunctions",
                    "default": "SIGMOID"
                }
            },
            "additionalProperties": false,
            "required": [
                "type",
                "neurons"
            ]
        },
        "Layer": {
            "description": "Properties specific to a unique layer.",
            "anyOf": [
                {
                    "$ref": "#/definitions/InputLayer"
                },
                {
                    "$ref": "#/definitions/ConvolutionLayer"
                },
                {
                    "$ref": "#/definitions/MaxPoolLayer"
                },
                {
                    "$ref": "#/definitions/FlattenLayer"
                },
                {
                    "$ref": "#/definitions/FullyConnectedLayer"
                }
            ],
            "required": [
                "name",
                "type"
            ],
            "type": "object"
        },
        "LayersList": {
            "items": {
                "$ref": "#/definitions/Layer"
            },
            "minItems": 2,
            "type": "array"
        },
        "LayersWithCustomInputsDefinition": {
            "properties": {
                "inputs": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/LayerName"
                        },
                        {
                            "items": {
                                "$ref": "#/definitions/LayerName"
                            },
                            "minItems": 1,
                            "type": "array"
                        }
                    ]
                },
                "layers": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/Layer"
                        },
                        {
                            "$ref": "#/definitions/LayersList"
                        }
                    ]
                }
            },
            "required": [
                "inputs",
                "layers"
            ],
            "additionalProperties": false,
            "type": "object"
        },
        "LayersWithCustomInputs": {
            "items": {
                "$ref": "#/definitions/LayersWithCustomInputsDefinition"
            },
            "minItems": 1,
            "type": "array"
        },
        "Architecture": {
            "description": "A list of neural network layers and the properties specific to each.",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/Layer"
                    },
                    {
                        "$ref": "#/definitions/LayersList"
                    },
                    {
                        "$ref": "#/definitions/LayersWithCustomInputs"
                    }
                ]
            },
            "additionalItems": false,
            "minItems": 2,
            "type": "array"
        }
    },
    "anyOf": [
        {
            "properties": {
                "architecture": {
                    "$ref": "#/definitions/Architecture"
                }
            },
            "required": [
                "architecture"
            ]
        }
    ]
}